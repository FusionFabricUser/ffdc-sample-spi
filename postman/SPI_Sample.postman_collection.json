{
	"info": {
		"_postman_id": "82cde520-ee40-43c9-aa4e-51572acdd921",
		"name": "Sample SPI",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "APIM fetch token",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "0c9f7641-c722-4630-a131-548207beed9f",
						"exec": [
							"var data = JSON.parse(responseBody);",
							"pm.test(\"APIM access token is returned\", function () {",
							"    pm.expect(pm.response.text()).to.include(\"access_token\");",
							"});",
							"",
							"postman.setEnvironmentVariable(\"APIM_token\", data.access_token);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"type": "text",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "grant_type",
							"value": "client_credentials",
							"type": "text"
						},
						{
							"key": "scope",
							"value": "openid",
							"type": "text"
						},
						{
							"key": "client_id",
							"value": "{{client_id}}",
							"type": "text"
						},
						{
							"key": "client_secret",
							"value": "{{client_secret}}",
							"type": "text"
						}
					],
					"options": {
						"urlencoded": {}
					}
				},
				"url": {
					"raw": "{{APIM}}/login/v1/sandbox/oidc/token",
					"host": [
						"{{APIM}}"
					],
					"path": [
						"login",
						"v1",
						"sandbox",
						"oidc",
						"token"
					]
				}
			},
			"response": []
		},
		{
			"name": "Call sample-spi without token",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "9c65e50d-0f32-41ce-afb0-13205dd6bba2",
						"exec": [
							"pm.test(\"Response code is 403 unauthorized\", function() {",
							"    pm.expect(pm.response.code).to.eql(403);",
							"});",
							"",
							"pm.test(\"Test response\", function() {",
							"    pm.expect(pm.response).to.not.equal(null);",
							"    pm.expect(pm.response.json()).to.be.not.empty;",
							"",
							"    var response = pm.response.json();",
							"    pm.expect(response).to.have.property(\"error\").and.not.be.empty;",
							"",
							"    pm.expect(response.error).is.to.equal(\"Forbidden\");   ",
							"",
							"});",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"type": "text",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"date\": \"1900-01-02\"\n}\n",
					"options": {
						"raw": {}
					}
				},
				"url": {
					"raw": "{{sample-spi-url}}/sample/spi/v1/day-of-week",
					"host": [
						"{{sample-spi-url}}"
					],
					"path": [
						"sample",
						"spi",
						"v1",
						"day-of-week"
					]
				}
			},
			"response": []
		},
		{
			"name": "Call sample-spi with token",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "9c65e50d-0f32-41ce-afb0-13205dd6bba2",
						"exec": [
							"pm.test(\"Response code is 200 OK\", function() {",
							"    pm.expect(pm.response.code).to.eql(200);",
							"});",
							"",
							"pm.test(\"Test response\", function() {",
							"    pm.expect(pm.response).to.not.equal(null);",
							"    pm.expect(pm.response.json()).to.be.not.empty;",
							"",
							"    var response = pm.response.json();",
							"    pm.expect(response).to.have.property(\"date\").and.not.be.empty;",
							"    pm.expect(response).to.have.property(\"dayOfWeek\").and.not.be.empty;",
							"",
							"    pm.expect(response.date).is.to.equal(\"1900-01-02\");   ",
							"    pm.expect(response.dayOfWeek).is.to.equal(\"TUESDAY\");   ",
							"",
							"});",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "oauth2",
					"oauth2": [
						{
							"key": "accessToken",
							"value": "{{APIM_token}}",
							"type": "string"
						},
						{
							"key": "tokenType",
							"value": "bearer",
							"type": "string"
						},
						{
							"key": "addTokenTo",
							"value": "header",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"type": "text",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"date\": \"1900-01-02\"\n}\n",
					"options": {
						"raw": {}
					}
				},
				"url": {
					"raw": "{{sample-spi-url}}/sample/spi/v1/day-of-week",
					"host": [
						"{{sample-spi-url}}"
					],
					"path": [
						"sample",
						"spi",
						"v1",
						"day-of-week"
					]
				}
			},
			"response": []
		}
	],
	"protocolProfileBehavior": {}
}